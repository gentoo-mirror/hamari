-  DESTINATION "include/libpololu-tic-${SOFTWARE_VERSION_MAJOR}")
+  DESTINATION "${CMAKE_INSTALL_INCLUDEDIR}/libpololu-tic-${SOFTWARE_VERSION_MAJOR}")
--- a/cli/CMakeLists.txt
